%%
Lpass=300;
Hstop=3000;
fBand=[Lpass/(Fs/2),Hstop/(Fs/2)];% normalization of frequency limits
[b,a]=cheby2(7,50,fBand,'bandpass');
xx=filtfilt(b,a,xx);
%%
sigma=median(abs(xx)./0.6745);
for i =1:4
    Lower=[1,1];
    u=2;
while Lower(1)~= 0
    Lower=size(xx(xx<-(u)*sigma(i)));
    u=u+1;
end
ThreLower(i)=-u/2*sigma(i);
end
